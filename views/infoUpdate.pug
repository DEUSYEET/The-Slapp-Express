extends layout

block content
    div(id="colorWrapperEdit")
        div(id="wrapperEdit")
            h1(class="mainHeader") Edit Information
            form(id="editForm" method="post" action="/edit")
                label(for="username") Username:&nbsp;
                br
                input(type="text" name="username" class="inputBox" value=user.username)
                br
                label(for="password") Password:&nbsp;
                br
                input(type="password" name="password" class="inputBox" value='')
                br
                label(for="email") Email:&nbsp;
                br
                input(type="email" name="email" class="inputBox" value=user.email)
                br
                label(for="age") Age:&nbsp;
                br
                input(type="text" name="age" class="inputBox" value=user.age)
                br
                br
                p Current Answer: #{value=user.ans1}
                label(for="questionOne") What is your gender?
                br
                input(type="radio" name="questionOne" value="male")
                label(for="male") Male
                br
                input(type="radio" name="questionOne" value="female")
                label(for="female") Female
                br
                input(type="radio" name="questionOne" value="non-binary")
                label(for="non-binary") Non-Binary
                br
                br
                p Current Answer: #{value=user.ans2}
                label(for="questionTwo") Which tempature do you prefer?
                br
                input(type="radio" name="questionTwo" value="warm")
                label(for="warm") Warm
                br
                input(type="radio" name="questionTwo" value="cold")
                label(for="cold") Cold
                br
                input(type="radio" name="questionTwo" value="hot")
                label(for="hot") Hot
                br
                br
                p Current Answer: #{value=user.ans3}
                label(for="questionThree") Do you like Winnie The Pooh?
                br
                input(type="radio" name="questionThree" value="Y")
                label(for="Y") Yes
                br
                input(type="radio" name="questionThree" value="DY")
                label(for="DY") Definitely Yes
                br
                input(type="radio" name="questionThree" value="WA")
                label(for="WA") No(Wrong Answer)
                br
                br
                input(type="submit" class="submitButton")
                a(href="/")
                    p(id="testP") Home